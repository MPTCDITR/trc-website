---
import Main from "@/components/Main.astro";
import MobilePrefixes from "@/components/page/resources/MobilePrefixes.astro";
import TextElement from "@/components/TextElement";

import { languages } from "@/i18n/ui";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";

const title = "Mobile Prefixes";

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const t = useTranslations(getLangFromUrl(Astro.url.pathname));
---

<BaseLayout title={title}>
  <Main>
    <TextElement variant="heading" className="text-text mb-6 text-center">
      {t("nav.resources.mobilePrefixes")}
    </TextElement>
    <MobilePrefixes />
  </Main>
</BaseLayout>
