---
import type { Page } from "astro";

interface Props {
  page: Page;
}

const { page } = Astro.props;
---

<nav aria-label="Pagination" class="mt-8 flex justify-center">
  {
    page.url.prev && (
      <a
        href={page.url.prev}
        class="mr-4 rounded bg-primary px-4 py-2 text-primary-foreground"
      >
        Previous
      </a>
    )
  }
  <span class="px-4 py-2">
    Page {page.currentPage} of {page.lastPage}
  </span>
  {
    page.url.next && (
      <a
        href={page.url.next}
        class="ml-4 rounded bg-primary px-4 py-2 text-primary-foreground"
      >
        Next
      </a>
    )
  }
</nav>
