---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  label: string;
  image: ImageMetadata;
  link: string;
}

const { label, image, link } = Astro.props as Props;
---

<a
  href={link}
  target="_blank"
  rel="noopener noreferrer"
  class="group flex items-start gap-4 hover:underline"
  aria-label={`${label} (opens in a new tab)`}
>
  <div class="col flex w-full flex-col items-center">
    <Image
      src={image}
      alt={label}
      class="mb-2 size-20 rounded-lg"
      loading="lazy"
    />
    <span class="w-4/5 text-center hover:text-primary lg:w-full">
      {label}
    </span>
  </div>
</a>
