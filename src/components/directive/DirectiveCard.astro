---
import { formatDate, toISOString } from "@/lib/date-helper";

import TextElement from "@/components/TextElement";

import { AspectRatio } from "../ui/aspect-ratio";
import networkPattern from "@/asset/network-pattern.png";
import type { DirectiveType } from "@/content/content.type";
import type { SupportedLanguage } from "@/i18n/ui";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  body: string;
  date: string;
  lang: SupportedLanguage;
  image: ImageMetadata;
  file: string;
  type: DirectiveType;
}

const { title, lang, date, image, file, type } = Astro.props as Props;

const absoluteFileUrl = new URL(file, Astro.url.origin).href;
---

<a
  href={absoluteFileUrl}
  aria-label={`(opens PDF in a new tab) Read full ${type} on ${title}`}
>
  <article
    class="flex h-full flex-col overflow-hidden rounded-xl border-2 border-solid border-textcolor bg-card text-card-foreground shadow-sm transition duration-500 ease-out hover:bg-primary hover:text-white sm:flex-row lg:rounded-3xl"
    aria-labelledby={`article-${title}`}
  >
    <figure class="md:1/3 lg :w-1/4 relative w-full sm:w-2/5 xl:w-1/5">
      <AspectRatio ratio={16 / 9}>
        <Image
          src={image}
          alt={title}
          class="size-full object-contain"
          loading="eager"
          widths={[320, 480, 640, 768, 1024]}
          sizes="(max-width: 640px) 100vw, (max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw"
          quality="mid"
          format="webp"
        />
      </AspectRatio>
    </figure>
    <div
      class="relative flex w-full flex-col p-4 sm:w-3/5 md:w-2/3 lg:w-3/4 xl:w-4/5"
    >
      <figure
        class="absolute bottom-0 right-0 w-1/5 sm:w-1/3 lg:w-2/5 xl:w-1/6"
      >
        <Image
          src={networkPattern}
          alt={title}
          loading="eager"
          widths={[320, 480, 640, 768, 1024]}
          sizes="(max-width: 640px) 100vw, (max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw"
          quality="mid"
          format="webp"
        />
      </figure>
      <TextElement
        variant="mediumtitle"
        className="line-clamp-2"
        id={`article-${title}`}
      >
        {title}
      </TextElement>
      <time
        datetime={toISOString(date)}
        class="leading-2 text-text mt-4 text-left text-xs"
      >
        <TextElement className="sr-only" variant="small"
          >published on:</TextElement
        >
        {formatDate(date, lang)}
      </time>
    </div>
  </article>
</a>
