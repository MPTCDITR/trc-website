---
import CellcardLogo from "@/asset/resources/Cellcard.png";
import CootelLogo from "@/asset/resources/Cootel.png";
import MetfoneLogo from "@/asset/resources/Metfone.png";
import SeatelLogo from "@/asset/resources/Seatel.png";
import SmartLogo from "@/asset/resources/Smart.png";
import { Image } from "astro:assets";
---

<div
  class="flex flex-row flex-wrap justify-center gap-3 md:flex-row lg:flex-row"
>
  <Image
    src={SmartLogo}
    alt="logo smart"
    sizes="(max-width: 640px) 100vw, (max-width: 768px) 256px, (max-width: 1024px) 256px, 128px"
    quality="high"
    loading="lazy"
    format="webp"
  />
  <Image
    src={CellcardLogo}
    alt="logo cellcard"
    sizes="(max-width: 640px) 100vw, (max-width: 768px) 256px, (max-width: 1024px) 256px, 128px"
    quality="high"
    loading="lazy"
    format="webp"
  />
  <Image
    src={MetfoneLogo}
    alt="logo metfone"
    sizes="(max-width: 640px) 100vw, (max-width: 768px) 256px, (max-width: 1024px) 256px, 128px"
    quality="high"
    loading="lazy"
    format="webp"
  />
  <Image
    src={SeatelLogo}
    alt="logo seatel"
    sizes="(max-width: 640px) 100vw, (max-width: 768px) 256px, (max-width: 1024px) 256px, 128px"
    quality="high"
    loading="lazy"
    format="webp"
  />
  <Image
    src={CootelLogo}
    alt="logo cootel"
    sizes="(max-width: 640px) 100vw, (max-width: 768px) 256px, (max-width: 1024px) 256px, 128px"
    quality="high"
    loading="lazy"
    format="webp"
  />
</div>
