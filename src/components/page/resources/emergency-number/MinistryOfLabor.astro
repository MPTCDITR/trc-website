---
import TextElement from "@/components/TextElement";

const NumberList = [
  {
    Title: "Occupational Accidents",
    Number: "1286",
  },
  {
    Title: "Labour Law",
    Number: "1297",
  },
];
---

<div class="flex flex-col rounded-2xl border p-4">
  <div class="flex flex-row justify-between p-4">
    <TextElement variant="title"
      >Ministry of Labor and Vocational Training</TextElement
    >
    <TextElement variant="title">Number</TextElement>
  </div>
  <hr />
  {
    NumberList.map((number) => (
      <div class="flex flex-row justify-between p-4">
        <TextElement variant="body">{number.Title}</TextElement>
        <ul>
          <li>
            <a
              href="tel:{number.Number}"
              class="flex text-primary hover:underline"
            >
              {number.Number}
            </a>
          </li>
        </ul>
      </div>
    ))
  }
</div>
