---
import TextElement from "@/components/TextElement";

import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  image: ImageMetadata;
  name: string;
  organization: string;
}

const { title, image, name, organization } = Astro.props as Props;
---

<figure class="grid place-items-center gap-y-5 py-10">
  <div
    class="relative size-52 overflow-hidden rounded-full drop-shadow-lg dark:border-gray-300"
  >
    <Image src={image} alt="" class="size-full object-cover" />
  </div>
  <figcaption class="text-center font-bold md:text-xl">
    {title}<span class="ml-3">{name}</span>
    <TextElement className="font-medium">{organization}</TextElement>
  </figcaption>
</figure>
