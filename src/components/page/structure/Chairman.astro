---
import TextElement from "@/components/TextElement";

import networkPattern from "@/asset/Network Pattern.png";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  image: ImageMetadata;
  name: string;
}

const { title, image, name } = Astro.props as Props;
---

<figure class="grid place-items-center gap-5 py-10">
  <div
    class="relative size-52 overflow-hidden rounded-full drop-shadow-lg dark:border-gray-300"
  >
    <Image src={image} alt="" class="size-full object-cover" />
  </div>
  <figcaption class="text-center text-lg text-white md:text-xl">
    {title}<span class="ml-3 font-bold">{name}</span>
  </figcaption>
</figure>
<div class="relative">
  <figure class="absolute bottom-0 left-0 w-2/5">
    <Image
      src={networkPattern}
      alt={title}
      loading="eager"
      widths={[320, 480, 640, 768, 1024]}
      sizes="(max-width: 640px) 100vw, (max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw"
      quality="mid"
      format="webp"
    />
  </figure>
</div>
