---
import ImageCarousel from "@/components/page/home/carousel/ImageCarousel";

import type { SupportedLanguage } from "@/i18n/ui";
import type { CollectionEntry } from "astro:content";

interface Props {
  content: CollectionEntry<"activities">[];
  lang: SupportedLanguage;
}

const { content, lang } = Astro.props;
---

<section aria-label="Carousel">
  <div class="relative h-[500px] w-full pt-4 lg:pt-6">
    <ImageCarousel carouselDatas={content} lang={lang} client:load />
  </div>
</section>
