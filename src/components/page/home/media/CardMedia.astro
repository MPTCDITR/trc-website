---
import { formatDate } from "@/lib/date-helper";

import { Badge } from "@/components/ui/badge";
import TextElement from "@/components/TextElement";

import networkPattern from "@/asset/Network Pattern.png";
import type { MediaType } from "@/content/media.type";
import type { SupportedLanguage } from "@/i18n/ui";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  date: string;
  lang: SupportedLanguage;
  href: string;
  image: ImageMetadata;
  type: MediaType;
}

const { title, href, image, date, lang, type } = Astro.props as Props;
---

<a href={href} aria-labelledby={`read-more-${href}`}>
  <article
    class="relative flex h-full gap-3 rounded-2xl border border-solid border-primary bg-card text-card-foreground shadow-sm sm:gap-5 xl:flex-col xl:gap-0 2xl:rounded-3xl"
  >
    <figure
      class="relative w-1/3 overflow-hidden rounded-l-2xl xl:w-full xl:rounded-t-3xl xl:rounded-bl-none"
    >
      <Image
        src={image}
        alt="image"
        widths={[384, 512, 768]}
        sizes="(max-width: 640px) 100vw, (max-width: 768px) 256px, (max-width: 1024px) 256px, 128px"
        quality="high"
        class="size-full max-h-52 object-cover sm:h-full xl:max-h-80"
        loading="lazy"
        format="webp"
      />
    </figure>
    <div class="flex w-2/3 flex-col gap-1.5 py-3 pr-3 xl:hidden xl:w-full">
      <TextElement
        variant="smalltitle"
        className="line-clamp-3 scroll-m-20 text-pretty font-normal leading-6 tracking-tight sm:line-clamp-4 xl:text-lg"
      >
        {title}
      </TextElement>
      <time
        class="text-xs text-left font-light sm:mb-4"
        datetime={new Date(date).toISOString()}
      >
        {formatDate(date, lang)}
      </time>
      <Badge
        variant="secondary"
        className="text-xs w-fit px-3 py-1 font-normal capitalize text-white hover:bg-secondary xl:px-5 xl:text-base"
        >{type}</Badge
      >
    </div>
    <div
      class="hidden h-72 w-2/3 p-5 xl:flex xl:w-full xl:flex-col xl:items-stretch xl:gap-0"
    >
      <Badge
        variant="secondary"
        className="text-xs -ml-9 mb-3 w-fit px-3 py-1 font-normal capitalize text-white hover:bg-secondary xl:px-5 xl:text-sm"
        >{type}</Badge
      >
      <TextElement
        variant="smalltitle"
        className="mb-auto line-clamp-4 scroll-m-20 text-pretty font-normal leading-6 tracking-tight"
      >
        {title}
      </TextElement>
      <time
        class="text-xs mt-auto flex grow items-end text-left font-light"
        datetime={new Date(date).toISOString()}
      >
        {formatDate(date, lang)}
      </time>
    </div>
    <figure class="absolute bottom-0 right-0 w-1/4 min-w-40">
      <Image
        src={networkPattern}
        alt={title}
        loading="eager"
        widths={[320, 480, 640, 768, 1024]}
        sizes="(max-width: 640px) 100vw, (max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw"
        quality="mid"
        format="webp"
      />
    </figure>
  </article>
</a>
