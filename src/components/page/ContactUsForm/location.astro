---
import TextElement from "@/components/TextElement";

import { Clock4, Mail, MapIcon, Phone } from "lucide-react";

const contactInfo = {
  address: "Street 102, Sangkat Wat Phnom, Khan Daun Penh, Phnom Penh",
  phone: "(855) 23 722 333 / 6789",
  email: "info@trc.gov.kh",
  hours: "7:30 AM - 5:30 PM / (Mon - Fri)",
};
---

<div class="rounded-lg border border-gray-500">
  <div class="rounded-t-lg bg-secondary">
    <TextElement variant="paragraph" className="px-4 py-4 text-white">
      Telecommunication Regulator of Cambodia
    </TextElement>
  </div>
  <div class="rounded-b-lg">
    <div class="flex items-center gap-4 px-4 py-2">
      <MapIcon size={20} />

      <TextElement variant="small" className="">
        {contactInfo.address}
      </TextElement>
    </div>
    <div class="flex items-center gap-4 px-4 py-2">
      <Phone size={20} />

      <TextElement variant="small" className="">
        {contactInfo.phone}
      </TextElement>
    </div>

    <div class="flex items-center gap-4 px-4 py-2">
      <Mail size={20} />

      <TextElement variant="small" className="">
        {contactInfo.email}
      </TextElement>
    </div>
    <div class="flex items-center gap-4 px-4 py-2">
      <Clock4 size={20} />

      <TextElement variant="small" className="">
        {contactInfo.hours}
      </TextElement>
    </div>
  </div>
</div>
<iframe
  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d13307.85787177001!2d104.91857956848632!3d11.566522571802162!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31095142eadcf8db%3A0xbd4e32a5eccddfb7!2z4Z6A4Z-S4Z6a4Z6f4Z694Z6E4Z6U4Z-S4Z6a4Z-D4Z6f4Z6O4Z644Z6Z4Z-NIOGek-Get-GehOGekeGevOGemuGeguGemOGek-GetuGeguGemOGek-GfjQ!5e0!3m2!1skm!2skh!4v1728374461088!5m2!1skm!2skh"
  class="mt-4 h-[21.5rem] w-full rounded-lg"
  title="Google Maps: Telecommunication Regulator of Cambodia Location"
>
</iframe>
