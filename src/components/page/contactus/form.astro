---
import TextElement from "@/components/TextElement";
---

<div>
  <TextElement variant="paragraph" className="">
    We are welcomed for any questions and feedback. Please fill in the form
    below and we will get back to you shortly. We appreciate your interest.
  </TextElement>
  <form class="py-4">
    <div class="py-2">
      <input
        type="text"
        id="full-name"
        name="full-name"
        placeholder="Full Name*"
        required
        class="w-full rounded-lg border border-gray-500 p-4 focus:border-black focus:outline-none"
      />
    </div>

    <div class="grid grid-cols-1 gap-4 py-2 sm:grid-cols-2">
      <div>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email*"
          required
          class="w-full rounded-lg border border-gray-500 p-4 focus:border-black focus:outline-none"
        />
      </div>

      <div>
        <input
          type="tel"
          id="phone-number"
          name="phone-number"
          placeholder="Phone Number*"
          required
          class="w-full rounded-lg border border-gray-500 p-4 focus:border-black focus:outline-none"
        />
      </div>
    </div>

    <div class="py-2">
      <input
        type="text"
        id="subject"
        name="subject"
        placeholder="Subject*"
        required
        class="w-full rounded-lg border border-gray-500 p-4 focus:border-black focus:outline-none"
      />
    </div>

    <div class="py-2">
      <textarea
        id="message"
        name="message"
        rows="10"
        placeholder="Message*"
        required
        class="w-full rounded-lg border border-gray-500 p-4 focus:border-black focus:outline-none"
      ></textarea>
    </div>
  </form>

  <div class="">
    <button
      type="button"
      class="inline-block w-full rounded-lg bg-primary px-6 pb-2 pt-2.5 text-white"
    >
      Submit
    </button>
  </div>
</div>
