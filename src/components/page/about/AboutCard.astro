---
import TextElement from "@/components/TextElement";

interface Props {
  title: string | null;
  body: string;
}

const { title, body } = Astro.props as Props;
---

<div class="h-full rounded-lg border bg-card text-card-foreground shadow-sm">
  <div class="flex flex-col justify-center gap-4 p-6">
    {title && <TextElement variant="smallheading">{title}</TextElement>}
    <TextElement variant="body" className="grow text-pretty">{body}</TextElement
    >
  </div>
</div>
